package living.nature;

import java.awt.Graphics;

/**
 *
 * @author Honza
 */
public class Animal {

    int x, y;

    public Animal(int x, int y) {
        this.x = x;
        this.y = y;
    }

    void move(int vx, int vy) {
        x += vx;
        y += vy;
    }

    void paint(Graphics g) {
        g.drawOval(x, y, 6, 6);
    }
}
